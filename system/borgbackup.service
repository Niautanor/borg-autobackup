[Unit]
Description=Perform a backup of the users home directory using borg(1)
Conflicts=borgmount.service

[Service]
Type=simple
EnvironmentFile=/etc/borg/environment
ExecStart=/bin/sh -c "xargs borg create --exclude-from /etc/borg/exclude --exclude-caches --keep-exclude-files ::$(date $ARCHIVENAME_DATE_FORMAT) < /etc/borg/sourcedirs"
